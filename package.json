{
  "private": true,
  "workspaces": [
    "packages/docs",
    "packages/eslint-config",
    "packages/tokens",
    "packages/ts-config",
    "packages/react-native",
    "packages/mobile-app"
  ],
  "scripts": {
    "test-storybook": "test-storybook",
    "prepare": "husky install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node --trace-warnings' node node_modules/jest/bin/jest.js --detectOpenHandles",
    "release": "turbo run build --filter=!docs && changeset publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/plugin-syntax-jsx": "^7.23.3",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.0.3",
    "@jest/globals": "^29.7.0",
    "@storybook/addon-docs": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-knobs": "^7.0.2",
    "@storybook/jest": "^0.2.3",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-native": "^12.4.1",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^10.0.6",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "chromatic": "^10.3.1",
    "cypress": "^13.6.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "turbo": "^1.5.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "turbo run lint --cwd"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@applitools/eyes-storybook": "^3.45.4",
    "@storybook/addon-a11y": "^7.6.9",
    "save": "^2.9.0",
    "typescript": "^5.1.6"
  }
}
