{
  "name": "@unifil/expo-crop-image",
  "version": "0.2.1",
  "description": "Allows user to crop image with given aspect ratio for react native using expo on Android and IOS - (Workaround for IOS always square images).",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build && npm run move-types",
    "dev": "rm -rf ./dist && tsc --build tsconfig.dev.json && npm run move-types:dev",
    "build:watch": "tsc --watch --project tsconfig.dev.json",
    "watch": "npm run build:watch",
    "lint": "eslint src --ext .tsx,.ts",
    "lint:fix": "npm run lint -- --fix",
    "commit": "git-cz",
    "move-types": "mkdir ./dist/@types && cp ./src/@types/index.d.ts ./dist/@types/",
    "move-types:dev": "mkdir -p ./dist/@types && cp ./src/@types/index.d.ts ./dist/@types/"
  },
  "keywords": [
    "expo-crop-image",
    "@unifil/expo-crop-image",
    "edit-image",
    "crop-image",
    "edit",
    "crop",
    "image",
    "image-picker",
    "react-native",
    "expo",
    "ios",
    "android"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@expo/vector-icons": "*",
    "expo-image-manipulator": "*",
    "react": "18.2.0",
    "react-native": "0.71.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@expo/vector-icons": "13.0.0",
    "@rocketseat/eslint-config": "^1.1.3",
    "@types/react": "~18.0.14",
    "@types/react-native": "^0.70.6",
    "commitizen": "^4.2.5",
    "eslint": "^8.29.0",
    "expo-image-manipulator": "^11.0.0",
    "prettier": "^2.8.0",
    "react": "18.2.0",
    "react-native": "0.71.8",
    "react-native-gesture-handler": "~2.9.0",
    "typescript": "^4.9.4",
    "@unifil/react-native": "*",
    "@unifil/tokens": "*"
  },
  "dependencies": {
    "recoil": "0.7.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "src/**": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist/**"
  ]
}
